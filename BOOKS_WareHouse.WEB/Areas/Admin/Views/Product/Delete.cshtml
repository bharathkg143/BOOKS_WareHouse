@model Product

@{
    ViewData["Title"] = "Delete-Product";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-light">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-controller="Product" asp-action="Delete">
            <input asp-for="Id" hidden />
            <div class="border p-3">
                @*<div asp-validation-summary="All" class="text-danger"></div>*@

                <div class="mb-3 row p-1">
                    <label asp-for="Title" class="p-0"></label>
                    <input type="text" disabled class="form-control border-0 shadow" asp-for="Title" />
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Description" class="p-0"></label>
                    <input type="text" disabled class="form-control border-0 shadow" asp-for="Description" />
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="ISBN" class="p-0"></label>
                    <input type="text" disabled class="form-control border-0 shadow" asp-for="ISBN" />
                    
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Author" class="p-0"></label>
                    <input type="text" disabled class="form-control border-0 shadow" asp-for="Author" />
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="ListPrice" class="p-0"></label>
                    <input type="number" disabled class="form-control border-0 shadow" asp-for="ListPrice" />
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Price" class="p-0"></label>
                    <input type="number" disabled class="form-control border-0 shadow" asp-for="Price" />
                   
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Price50" class="p-0"></label>
                    <input type="number" disabled class="form-control border-0 shadow" asp-for="Price50" />
                   
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Price100" class="p-0"></label>
                    <input type="number" disabled class="form-control border-0 shadow" asp-for="Price100" />
                    
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a class="btn btn-secondary border form-control" asp-controller="Product" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
