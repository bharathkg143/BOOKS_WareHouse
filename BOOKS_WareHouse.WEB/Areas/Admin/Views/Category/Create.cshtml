@model Category

@{
    ViewData["Title"] = "Create";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-light">Create Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-controller="Category" asp-action="Create">
            <div class="border p-3">
                @*<div asp-validation-summary="All" class="text-danger"></div>*@

                <div class="mb-3 row p-1">
                    <label asp-for="Name" class="p-0"></label>
                    <input type="text" class="form-control border-0 shadow" asp-for="Name" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="DisplayOrder" class="p-0"></label>
                    <input type="number" class="form-control border-0 shadow" asp-for="DisplayOrder" />
                    <span class="text-danger" asp-validation-for="DisplayOrder"></span>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a class="btn btn-secondary border form-control" asp-controller="Category" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


