@model OrderVM
@{
    ViewData["Title"] = "Details";
}

<form method="post">
    <input asp-for="OrderHeader.Id" hidden />
    <br />
    <div class="container mb-5">

        <div class="d-flex justify-content-end mb-1">
            <a class="btn btn-primary btn-sm w-25" asp-action="Index">Back to Orders</a>
        </div>

        <div class="card shadow">
            <div class="card-header bg-secondary text-light ml-0">
                <div class="container row">
                    <div class="col-12 d-none d-md-block col-md-6 pb-1 text-center">
                        <h4>Customer Order Summary</h4>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-primary">PickUp Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.Name" />
                                        <span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.Name" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone Number</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.PhoneNumber" />
                                        <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.PhoneNumber" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Address</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.StreetAddress" />
                                        <span asp-validation-for="OrderHeader.StreetAddress" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.StreetAddress" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">City</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.City" />
                                        <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.City" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">State</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.State" />
                                        <span asp-validation-for="OrderHeader.State" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.State" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Zip Code</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.PostalCode" />
                                        <span asp-validation-for="OrderHeader.PostalCode" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.PostalCode" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    <input type="text" class="form-control" asp-for="OrderHeader.applicationUser.Email" readonly />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order Date</div>
                                <div class="col-9">
                                    <input type="text" class="form-control" value="@Model.OrderHeader.OrderDate.ToShortDateString()" readonly />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Carrier</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.Carrier" id="inpCarrier" />
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.Carrier" id="inpCarrier" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Tracking</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.TrackingNumber" id="inpTracking" />
                                        <span asp-validation-for="OrderHeader.TrackingNumber" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.TrackingNumber" id="inpTracking" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Shipping Date</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input type="text" class="form-control" value="@Model.OrderHeader.ShippingDate.ToShortDateString()" />
                                        <span asp-validation-for="OrderHeader.ShippingDate" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" value="@Model.OrderHeader.ShippingDate.ToShortDateString()" readonly />
                                    }
                                </div>
                            </div>

                            <div class="row my-1">
                                @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                {
                                    <div class="col-3">Session ID</div>
                                    <div class="col-9">
                                        <input class="form-control" value="@Model.OrderHeader.SessionId" readonly />
                                    </div>
                                }
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Payment Intent ID</div>
                                <div class="col-9">
                                    <input type="text" class="form-control" value="@Model.OrderHeader.PaymentIntentId" readonly />
                                </div>
                            </div>

                            @if (Model.OrderHeader.PaymentStatus != SD.PaymentStatusApproved)
                            {
                                <div class="row my-1" id="paymentDueDiv">
                                    <div class="col-3">Payment Due Date</div>
                                    <div class="col-9">
                                        <input type="text" class="form-control" value="@Model.OrderHeader.PaymentDueDate.ToShortDateString()" readonly />
                                    </div>
                                </div>
                            }

                            <div class="row my-1">
                                <div class="col-3">Payment Date</div>
                                <div class="col-9">
                                    <input type="text" class="form-control" value="@Model.OrderHeader.PaymentDate.ToShortDateString()" readonly />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Payment Status</div>
                                <div class="col-9">
                                    <input type="text" class="form-control" asp-for="OrderHeader.PaymentStatus" readonly />
                                </div>
                            </div>

                            @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                            {
                                <input asp-action="UpdateOrderDetails" type="submit" class="btn btn-warning form-control my-1 mt-3" value="Update Order Details" />
                            }
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h3 class="d-flex justify-content-between align-items-center mb-1">
                                <span class="text-primary">ORDER SUMMARY</span>
                            </h3>
                            <label class="btn btn-outline-primary form-control my-2 mt-1 bg-success">
                                Order Status - @Model.OrderHeader.OrderStatus <i class="bi bi-check2-circle text-primary"></i>
                            </label>

                            <ul class="list-group mb-3">
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">
                                                <h6 class="my-0 text-primary">@item.Product.Title</h6>
                                                <small class="text-muted">Price : @item.Price.ToString("c")</small>
                                                <br />
                                                <small class="text-muted">Quantity : @item.Count</small>
                                            </div>
                                            <div class="col-4 text-end">
                                                <p class="text-success">@item.Price * @item.Count</p>
                                            </div>
                                        </div>
                                    </li>
                                }
                                <li class="list-group-item bg-primary">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">TOTAL </h5>
                                        </div>
                                        <div class="col-6 text-end">
                                            <h5 class="text-white">@Model.OrderHeader.OrderTotal.ToString("c")</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>

                            @*Buttons to perfom based on status*@
                            @if (Model.OrderHeader.PaymentStatus == SD.PaymentStatusPending)
                            {
                                <button asp-action="OrderPayment" type="submit" class="btn btn-success form-control my-1">Pay now</button>
                            }

                            @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                            {
                                if (Model.OrderHeader.OrderStatus == SD.StatusApproved)
                                {
                                    <button asp-action="StartProcessing" type="submit" class="btn btn-primary form-control my-1">Start Processing</button>
                                }
                                if (Model.OrderHeader.OrderStatus == SD.StatusInProcess)
                                {
                                    <button asp-action="ShipOrder" type="submit" onclick="return validateBeforeShippingOrder()" class="btn btn-primary form-control my-1">Ship Order</button>
                                }

                                if (Model.OrderHeader.OrderStatus != SD.StatusShipped &&
                                Model.OrderHeader.OrderStatus != SD.StatusCancelled)
                                {
                                    <button asp-action="CancelOrder" type="submit" class="btn btn-danger form-control my-1">Cancel Order</button>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
        function validateBeforeShippingOrder() {
            var Carrier = $('#inpCarrier').val();
            var TrackingNum = $('#inpTracking').val();

            if (Carrier == "") {
                alert("Carrier is empty, Please Enter value");
                return false;
            }
            
            if (TrackingNum == "") {
                alert("Tracking Number is empty, Please Enter value");
                return false;
            }

            return true;
        }
    </script>
}

