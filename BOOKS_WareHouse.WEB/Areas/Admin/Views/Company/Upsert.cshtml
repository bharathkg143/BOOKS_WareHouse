@model Company

@{
    ViewData["Title"] = "Upsert";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                @if (Model.Id == 0)
                {
                    <h2 class="text-light">Create Company</h2>
                }
                else
                {
                    <h2 class="text-light">Update Company</h2>
                }
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-controller="Company" asp-action="Upsert">
            <input asp-for="Id" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        @*<div asp-validation-summary="All" class="text-danger"></div>*@

                        <div class="mb-3 row p-1">
                            <label asp-for="Name" class="p-0"></label>
                            <input type="text" class="form-control border-0 shadow" asp-for="Name" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>

                        <div class="mb-3 row p-1">
                            <label asp-for="PhoneNumber" class="p-0"></label>
                            <input type="number" class="form-control border-0 shadow" asp-for="PhoneNumber" />
                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>

                        <div class="mb-3 row p-1">
                            <label asp-for="StreetAddress" class="p-0"></label>
                            <input type="text" class="form-control border-0 shadow" asp-for="StreetAddress" />
                            <span class="text-danger" asp-validation-for="StreetAddress"></span>
                        </div>

                        <div class="mb-3 row p-1">
                            <label asp-for="City" class="p-0"></label>
                            <input type="text" class="form-control border-0 shadow" asp-for="City" />
                            <span class="text-danger" asp-validation-for="City"></span>
                        </div>

                        <div class="mb-3 row p-1">
                            <label asp-for="PostalCode" class="p-0"></label>
                            <input type="number" class="form-control border-0 shadow" asp-for="PostalCode" />
                            <span class="text-danger" asp-validation-for="PostalCode"></span>
                        </div>

                        <div class="row">
                            <div class="col-6 col-md-3">
                                @if (Model.Id == 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a class="btn btn-secondary border form-control" asp-controller="Company" asp-action="Index">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{

        <partial name="_ValidationScriptsPartial" />
}

