@model Company

@{
    ViewData["Title"] = "Delete-Company";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-light">Delete Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-controller="Company" asp-action="Delete">
            <input asp-for="Id" hidden />
            <div class="border p-3">
                @*<div asp-validation-summary="All" class="text-danger"></div>*@

                <div class="mb-3 row p-1">
                    <label asp-for="Name" class="p-0"></label>
                    <input type="text" disabled class="form-control border-0 shadow" asp-for="Name" />
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="StreetAddress" class="p-0"></label>
                    <input type="text" disabled class="form-control border-0 shadow" asp-for="StreetAddress" />
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="City" class="p-0"></label>
                    <input type="text" disabled class="form-control border-0 shadow" asp-for="City" />

                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="PostalCode" class="p-0"></label>
                    <input type="text" disabled class="form-control border-0 shadow" asp-for="PostalCode" />
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="PhoneNumber" class="p-0"></label>
                    <input type="number" disabled class="form-control border-0 shadow" asp-for="PhoneNumber" />
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a class="btn btn-secondary border form-control" asp-controller="Company" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

